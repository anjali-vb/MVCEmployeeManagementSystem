@model EmployeeManagementSystem2025.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Employee Management System</h1>
<h4>Login</h4>
<hr />

<div class="container mt-4">
    <div class="row justify-content-center">
        <!-- Left Side: Image with Shadow -->
        <div class="col-md-6 col-12 mb-3">
            <img src="/images/ems.jpg" alt="EMS Login" class="img-fluid shadow" style="max-height: 350px;" />
        </div>

        <!-- Right Side: Login Form with Shadow -->
        <div class="col-md-6 col-12 mb-3">
            <div class="p-4 bg-light shadow rounded">
                <h4 class="text-center mb-3">Enter your Credentials</h4>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="UserPassword" class="control-label"></label>
                        <input asp-for="UserPassword" class="form-control" type="password" />
                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Login" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}